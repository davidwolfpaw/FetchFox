{
    "manifest_version": 2,
    "name": "FetchFox - Curation Collector",
    "version": "0.1",
    "description": "Collects metadata of the current page and saves it to browser.storage.local for content curation",
    "icons": {
        "48": "icons/icon-48.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "48": "icons/icon-48.png"
        },
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>",
        "downloads"
    ]
}
